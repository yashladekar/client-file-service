generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model FileUpload {
  id        String     @id @default(uuid())
  filename  String
  path      String
  status    FileStatus @default(UPLOADED)
  error     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model ClientData {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  phone  String?
  // Add other fields matching your Excel columns
  fileId String? // Optional: link data back to the source file
}

enum FileStatus {
  UPLOADED
  PROCESSING
  PARSED
  FAILED
}
