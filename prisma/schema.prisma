generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model SapSystem {
  id        String   @id @default(uuid())
  sid       String   @unique
  landscape String? // DEV / QA / PRD
  vendor    String?
  location  String?
  createdAt DateTime @default(now())

  components SapComponent[]
}

model SapComponent {
  id String @id @default(uuid())

  systemId String
  system   SapSystem @relation(fields: [systemId], references: [id])

  name        String
  version     String
  mainProduct String?

  subComponents SapSubComponent[]

  createdAt DateTime @default(now())

  @@unique([systemId, name, version])
}

model SapSubComponent {
  id String @id @default(uuid())

  componentId String
  component   SapComponent @relation(fields: [componentId], references: [id])

  name    String // Kernel / DB / Java / ICM
  version String?
  vendor  String?
  os      String?

  createdAt DateTime @default(now())
}

model FileUpload {
  id        String     @id @default(uuid())
  filename  String
  status    FileStatus @default(UPLOADED)
  error     String?
  createdAt DateTime   @default(now())
}

enum FileStatus {
  UPLOADED
  PROCESSING
  PARSED
  FAILED
}
